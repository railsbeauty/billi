<%= form_for ([@article, @article.comments.build]) do |f| %>
 <%= f.hidden_field :article_id %>
  <div class="field">
    <%= f.text_area :content, :style => "width:720px; height:100px; border: 1px solid #82b548;" %>
  </div>
  <div class="actions">
    <%= f.submit "PUSH", :style => "margin-right:20px; margin-left:670px; background-color:#82b548; color:#FFFFFF; border: 1px solid #82b548; border-radius: 3px 3px 3px 3px; font-size: 1.2rem;" %>
  </div>
<% end %>