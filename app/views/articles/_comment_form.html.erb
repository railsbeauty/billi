
<%= form_for ([@article, @article.comments.build]), :required => true do |f| %>
 <%= f.hidden_field :article_id %> 
 <%= f.text_area :content, :style => "width:717px; height:100px; border: 1px solid #66c9ee;margin-top:10px; background-color:#FFFFFF;margin-left:14px" %>
    <div class="actions">
    <%= f.submit "Add Comment", :style => "margin-right:20px; margin-left:600px; background-color:#66C9Ef; color:#FFFFFF; border: 0px solid #82b548; border-radius: 3px 3px 3px 3px; font-size: 1.3rem;" %>
  </div>
<% end %>