<table class ="span6">
  <tr>
    <td style="width="400%; "> 
  <div style="border: 1px solid #B5B5B5;border-radius: 00px px px px;margin: 0 0 20px; padding: 0px 0px 2px; background: none repeat scroll 0 0 #B5B5B5; width: 90%; margin-left:40px;margin-top:40px; ">

  <div style="border-bottom: none:border: 1px solid #E0E0F0;border-radius: 4px 4px 4px 4px;margin: 0 0 20px; padding: 20px 20px 10px;; background: none repeat scroll 0 0 #FFFFFF ">
  <div style="color:#1fb2e8;"><h2><%= @article.title %></h2></div>
  <div id="tabs"> 
     <ul id="tabs">
     <li><div style="color:#82b548;">  <%= time_tag(@article.created_at.in_time_zone("Asia/Calcutta")) %> </div></li>

      <li> <div style="color:#4895d1; ">  <%= @article.user.username if @article.user %></div></li>
      <% if ! @article.comments.empty? %>
      <li><div style="color:#CCD600;">  <%= @article.comments.size %> comments</div></li>
     <% else %>
          <li><div style="color:#CCD600;"> no comment </div></li>
      <% end %>
      <li>
      <% @article.tags.each do |tag| %>
     <%= link_to tag.name, tag_path(tag) %>
      <% end %>
     
     </li>
     </ul>
   </div>
  <hr style="border: 1px normal #E0E0F0; margin-top:35px">
  <div style="font-size: 1.2em"><%= @article.body %></div>
  </div>

  <div class="form">
    <%= link_to "back",articles_path, :class => 'btn btn-inverse'  %>
    <% if current_user.try (:is_admin) %>
    <%= link_to "edit", edit_article_path(@article), :class => 'btn btn-warning btn' %>
    <%= link_to "delete",article_path(@article),:method => :delete,:confirm => 'Are you sure?',:class => 'btn  btn-danger' %>
    <% end %>
  </div>
  </div>
    <div style="border: px solid #1763A4;border-radius: 4px 4px 4px 4px;margin: 0 0 20px; padding: 20px 30px 0px; background: none repeat scroll 0 0 #ffffff; width: 85% ">
    <% unless @article.comments.empty? %>
    <h5> <%= @article.comments.size %> comments</h5>
    <% end %>
    
    <%= render :partial => 'comment_form' %>
    <% @article.comments.each do |c| %>
    <% unless  c.nil? %>
    <% end %>    
   <div style="margin:left:50px; margin:right:50px;margin-top:30px"> <%= render partial: 'articles/comment', :locals => { :comment => c } %> </div>
    <% end %> 
    </div>
    </td>
    </tr>
</table>


   <div style="border: 1px solid #B5B5B5;border-radius: 00px px px px;margin: 0 0 2px;margin-left:815px;margin-top:400px;width:300px;margin-top:40px">
    <h4>Related articles</h4>
      <% @related_articles.each do | related_article | %>
        <% if !related_article.nil? %>
         <div style="margin-top:15px; margin-left:8px; font-size:1.4em;">  <%= link_to  truncate(related_article.title, :length => 35, :separator => ' '),  article_path(related_article) %></div>
       <% end %>
      <% end %>





