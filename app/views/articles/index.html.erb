<%- model_class = Article -%>
<div class="">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      
      
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
       <td><%= article.title %></td>
       </tr>
       <tr>
        <td><%= article.body %></td>
      </tr>
      <tr>
        <td><%=l article.created_at %></td>
      </tr>
      <tr>
      <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_article_path(article), :class => 'btn btn-warning btn' %>
      
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      article_path(article),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn  btn-danger' %>
        
        <a href="#" class="btn btn-primary"><i class="icon-white"></i> View Article</a>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Create new Article", new_article_path, :class => 'btn btn-large btn-primary' %>