
<div class="">
  <title> <h2> learning experience blog </h2></title>
</div>

<div style="border: 0px solid #1763A4;border-radius: 0px 0px 0px 0px;margin: 0 0 20px; padding: 20px 20px 10px; background: none repeat scroll 0 0 #66c9ee; width: 85%">

<% @articles.each do |article| %>
  <div style=" border-bottom: none:border: 1px solid #666666;border-radius: 1px 1px 1px 1px;margin: 0 0 20px; padding: 20px 20px 10px;height:300px; background: none repeat scroll 0 0 #FFFFFF ">

  
  <div style="font-size: 3em"> <%= link_to article.title, article_path(article) %></div>
   <div id="tabs"> 
   <ul id="tabs">
   <li><div style="color:#666666; font-size: 1.4em;">  <%= article.created_at.in_time_zone("Asia/Calcutta") %></div></li>
   
    <li> <div style="color:#4895d1; font-size: 1.4em">  <%= article.user.username if article.user %></div></li>
    <li><div style="color:#CCD600; font-size: 1.4em;"> Comments <%  %></div></li>
   </ul>
 </div>
    <hr style="border: 1px solid #2e77bb; margin-top:35px">
    <div style="margin-top:10px; font-size: 1.2em"> <%= truncate(article.body, :length => 500, :separator => ' ') %></div>  
    <div style="margin-top:45px">
    <% if current_user.try(:is_admin) %>
     <%= link_to "edit",edit_article_path(article), :class => 'btn btn-warning btn' %>
     <%= link_to "delete",article_path(article),:method => :delete,:confirm => 'Are you sure?',:class => 'btn  btn-danger' %>
    <% end %>
     <%= link_to "view more...",article_path(article), :class => 'btn btn-primary' %> 
   </div>
     </div>
    <% end %>
 <% if current_user.try(:is_admin) %>
  <%= link_to "Create new Article", new_article_path, :class => 'btn btn-large btn-primary' %>
  <% end %>

  